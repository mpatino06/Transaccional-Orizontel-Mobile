                                           VerticalOptions="Center" 
                                           HorizontalOptions="Start"
                                           FontFamily="Exo" FontSize="10" />

									<Label 
                                           Grid.Column="3" Grid.Row="0"
                                           Text="{Binding Valor }" 
                                           VerticalOptions="Center" 
                                           HorizontalOptions="Start"
                                           FontFamily="Exo" FontSize="10" />
								</Grid>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
