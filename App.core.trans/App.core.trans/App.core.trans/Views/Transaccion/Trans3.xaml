						    FontSize="10"
						    Margin="10,0,0,0"
							Title="Seleccione Bancos"
						    FontFamily="Exo" 
							WidthRequest="300"
                            VerticalOptions="Center" 
                            HorizontalOptions="StartAndExpand">
					</Picker>

					<!--ROW 1-->
					<Entry
							Grid.Row="1"
						    Grid.Column="0"
                            Text="{Binding ChequeCuenta}" 
                            VerticalOptions="Center" 
						    Placeholder="Cta Corriente"
                            FontSize="10"
							FontFamily="Exo"  
                            HorizontalOptions="StartAndExpand" />
					<Entry
							Grid.Row="1"
						    Grid.Column="1"
                            Text="{Binding ChequeNumero}" 
                            VerticalOptions="Center" 
						    Placeholder="Nro Cheque"
                            FontSize="10"
							FontFamily="Exo"  
                            HorizontalOptions="StartAndExpand" />
					<Entry
							Grid.Row="1"
						    Grid.Column="2"
                            Text="{Binding ChequeMonto}" 
                            VerticalOptions="Center" 
						    Placeholder="Monto"
                            FontSize="10"
							FontFamily="Exo" 
