					<Label x:Name="Label9" Text="Moneda"  Grid.Row="2"  FontSize="10" FontFamily="Exo"  Grid.Column="2"  HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" ></Label>
