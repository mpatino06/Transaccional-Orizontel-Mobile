                                           HorizontalOptions="Start"
                                           FontFamily="Exo" FontSize="10" FontAttributes="Bold" />

										<Entry
										   Grid.Column="1" 
                                           Text="{Binding ValueInsert}" 
                                           VerticalOptions="Center" 
                                           FontSize="10"
											WidthRequest="50"
                                           HorizontalOptions="Center" Keyboard="Numeric" />
